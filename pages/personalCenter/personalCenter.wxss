/**index.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 50rpx;
  box-sizing: border-box;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: rgb(0, 0, 0);
}

.allButton {
  padding: 0rpx
}

.button1 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: white;
  align-items: center;
  border-color: white;
  margin: 50rpx
}
.button1:active{
  background-color: rgba(212, 206, 206, 0.63)
}

.text1 {
  font-weight: lighter;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: rgba(20, 20, 20, 1)
}

.view1 {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-content: center;
  align-items: center
}

.image1 {
  height: 30rpx;
  width: 30rpx;
  align-items: center;
}
